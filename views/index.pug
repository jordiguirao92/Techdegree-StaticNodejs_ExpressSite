extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

       
      h1 Welcome to my Portfolio

      
      p.lead.text-light
        | Find 5 projects that I have made in the Treehouse's Full Stack Developer Techdegree program.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
    
     each project in projects
       .cell
          a(href=`/projects/${project.id}`)
           img.thumbnail(src=`${project.images_urls[0]}`)
           h5= `${project.project_name}`
      
